{
  "name": "chika-component",
  "version": "1.0.0",
  "description": "A set of react-component, IQ3 でもまかせなさいー！",
  "main": "lib/index.js",
  "scripts": {
    "start": "nino go -e ./src/go",
    "test": "nino test",
    "build": "tsc && nino koei -c ./scripts/nino.koei",
    "compile": "tsc && nino compile",
    "codecov": "nino test -d",
    "dev": "nino koei -w-d",
    "lint": "tslint -c tslint.json 'src/**/*.ts[x]'",
    "prettier": "nino prettier",
    "lint-staged": "lint-staged",
    "backup": "npm config set registry=https://registry.npmjs.org && npm config set registry=https://registry.npm.taobao.org",
    "pub": "npm run build && npm run compile && git push origin master && npm publish",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "files": [
    "lib",
    "dist"
  ],
  "dependencies": {
    "antd-mobile": "^2.2.12",
    "leaflet": "^1.4.0",
    "nino-cli": "^0.7.4"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/leaflet": "^1.4.4",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.2",
    "date-fns": "^2.0.0-alpha.27",
    "dekko": "^0.2.1",
    "gh-pages": "^2.0.1",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "react-router-dom": "^5.0.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "whatwg-fetch": "^3.0.0"
  },
  "license": "MIT",
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
